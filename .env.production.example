# 生产环境配置文件
# 复制此文件为 .env 并填写实际值

# 数据库配置
POSTGRES_PASSWORD=your-super-secure-postgres-password-here

# JWT配置 - 生产环境必须更改！
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-please

# 应用配置
DATABASE_URL=postgresql://comment_user:${POSTGRES_PASSWORD}@postgres:5432/comment_db
REDIS_URL=redis://redis:6379/0

# CORS配置 - 添加你的域名
CORS_ORIGINS=["https://www.yhnotes.com", "https://yourdomain.com"]

# 限流配置
RATE_LIMIT_ENABLED=true
IP_RATE_LIMIT=10
USER_RATE_LIMIT=5
EMAIL_RATE_LIMIT=3
GLOBAL_RATE_LIMIT=1000

# 地区API配置
VORE_API_URL=https://api.vore.top/api/IP
VORE_API_TIMEOUT=3
VORE_API_CACHE_TTL=86400

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 生产环境配置
DEBUG=false
RELOAD=false

# 内容验证配置
MIN_CONTENT_LENGTH=10
MAX_CONTENT_LENGTH=2000
MIN_USERNAME_LENGTH=2
MAX_USERNAME_LENGTH=100
MAX_EMAIL_LENGTH=255
MAX_PAGE_LENGTH=200

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 缓存配置
CACHE_TTL=300